@model GRPCService.Order

@{
    ViewData["Title"] = "Delete Order";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h3>Are you sure you want to delete this order?</h3>

    <div>
        <strong>Order ID:</strong> @Model.OrderId
    </div>
    <div>
        <strong>Client:</strong> @Model.Client
    </div>
    <div>
        <strong>Car:</strong> @Model.Car
    </div>
    <div>
        <strong>Order Date:</strong> @Model.OrderDate
    </div>

    <form method="post" asp-action="DeleteConfirmed">
        <input type="hidden" name="id" value="@Model.OrderId" />
        <div>
            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="@Url.Action("Index", "OrderGrpc")" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
