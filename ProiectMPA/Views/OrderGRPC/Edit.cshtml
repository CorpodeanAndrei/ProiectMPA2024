@model ProiectMPA.Models.Order

@{
    ViewData["Title"] = "Edit Order";
}

<h2>@ViewData["Title"]</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.OrderID)
        @Html.EditorFor(m => m.OrderID)
        @Html.ValidationMessageFor(m => m.OrderID)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ClientID)
        @Html.EditorFor(m => m.ClientID)
        @Html.ValidationMessageFor(m => m.ClientID)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CarID)
        @Html.EditorFor(m => m.CarID)
        @Html.ValidationMessageFor(m => m.CarID)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.OrderDate)
        @Html.EditorFor(m => m.OrderDate)
        @Html.ValidationMessageFor(m => m.OrderDate)
    </div>

    <div>
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a href="@Url.Action("Index", "OrderGrpc")" class="btn btn-secondary">Back to Orders</a>
    </div>
}
